<aura:component>


    <!-- ATTRIBUTES -->
    <!-- <aura:attribute name="body" type="Boolean" default="Aura.Component" /> -->
    <aura:attribute name="columns" type="List" default="[]" />
    <aura:attribute name="records" type="List" default="[]" />

