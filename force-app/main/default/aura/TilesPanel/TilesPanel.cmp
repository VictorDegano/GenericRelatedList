                    <lightning:tile label="{! record.CaseNumber}" href="{! record.LinkName}">
                        <aura:iteration items="{! v.columns }" var="column">
                            <aura:if isTrue="{! and(column.label != 'Name',column.label != 'CaseName')}">
                                <c:TileField
                                    column="{! column }"
                                    record="{! record }"
                                />
                            </aura:if>
                        </aura:iteration>
